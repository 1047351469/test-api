type ExtractFlatLayer<
  T,
  TargetDepth extends number,
  CurrentDepth extends any[] = []
> = CurrentDepth['length'] extends TargetDepth
  ? T extends object
    ? { [K in keyof T]: string }
    : {}
  : T extends object
    ? Merge<{
        [K in keyof T]: ExtractFlatLayer<T[K], TargetDepth, [...CurrentDepth, 1]>
      }>
    : {};

// 把对象类型合并为一个，不让它变联合
type Merge<T> = {
  [K in keyof T]: T[K];
};